@model IEnumerable<Inventory_Managment_System.DTOs.RoleModel>

<div class="container mt-5">
    <h2 class="text-center mb-4">Manage Roles</h2>
    <div class="row mb-3">
        <div class="col">
            <a asp-action="Create" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Create New Role
            </a>
        </div>
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover table-bordered align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th scope="col">Role Name</th>
                            <th scope="col" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var role in Model)
                        {
                            <tr>
                                <td>@role.Name</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@role.Id" class="btn btn-sm btn-warning me-2">
                                        <i class="bi bi-pencil-square me-1"></i>Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash me-1"></i>Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-info text-center" role="alert">
                    No roles found. Click "Create New Role" to add a new role.
                </div>
            }
        </div>
    </div>
</div>